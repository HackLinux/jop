<project name="target" default="dist" basedir=".">
	<description>
		Build the JOP target ROM
	</description>
	
	<!-- set global properties for this build -->
	<property name="src" location="src"/>
	<property name="build" location="build"/>
	<property name="dist"	location="dist"/>

	<target name="init">
		<!-- Create the time stamp -->
		<tstamp/>
		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${build}"/>
	</target>

	<target name="compile" depends="init" description="compile the source " >
		<!-- Compile the java code from ${src} into ${build} -->
		<javac
			srcdir="${src}" 
			classpath="../runtime/dist/lib/jop-runtime.zip" 
			destdir="${build}"
			target="1.1"
		/>
	</target>

	<target name="dist" depends="compile" description="generate the distribution" >
		<!-- Create the distribution directory -->
		<mkdir dir="${dist}/lib"/>

		<!-- Put everything in ${build} into the ${ant.project.name}.zip file -->
		<zip destfile="${dist}/lib/${ant.project.name}.zip" basedir="${build}">
			<zipfileset src="../runtime/dist/lib/jop-runtime.zip" />
		</zip>
		
		<java classpath="../tools/jcc.jar;../tools/dist/lib/jop-tools.jar" classname="JavaCodeCompact" >
			<arg line="-v -nq -arch JOP -o ${dist}/lib/${ant.project.name}.bin ${dist}/lib/${ant.project.name}.zip"/>
			<sysproperty key="jop.startclass" value="test/Clock"/>
		</java>

		<java classpath="../tools/jcc.jar;../tools/dist/lib/jop-tools.jar" classname="com.jopdesign.tools.JopBitGen" >
			<arg line="${dist}/lib/${ant.project.name}.bin ${dist}/lib/${ant.project.name}.bit"/>
		</java>


	</target>

	<target name="clean" description="clean up" >
		<!-- Delete the ${build} and ${dist} directory trees -->
		<delete dir="${build}"/>
		<delete dir="${dist}"/>
	</target>
</project>
